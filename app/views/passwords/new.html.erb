<h1><%= t('.title') %><span><%= t('.description') %></span></h1>

<% form_for :password, :url => passwords_path do |form| %>
	<fieldset>
    <%= form.label :email, t('user.email') %>
    <%= form.text_field :email %>
  </fieldset>
	<fieldset>
    <%= form.submit t('.buttons.reset'), :disable_with => t('buttons.wait') %>
  </fieldset>
<% end %>