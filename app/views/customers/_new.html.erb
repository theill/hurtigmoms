<tr id="<%= dom_id(customer) %>" class="customer row-editing">
	<td colspan="3">
		<div class="box">
			<%- form_for(customer) do |f| -%>
			  <%= f.error_messages %>
				
				<fieldset>
					<%= f.label :name, t('customer.name') %>
					<%= f.text_field :name %>
				</fieldset>
				<fieldset>
					<%= f.label :description, t('customer.description') %>
					<%= f.text_area :description, :rows => 4 %>
				</fieldset>
				<p>
					<%= f.submit t('buttons.save') %> <%= link_to(t('buttons.close'), '#', :class => 'close') %>
				</p>
			<%- end -%>
		</div>
	</td>
</tr>