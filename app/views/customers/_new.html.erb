<tr id="<%= dom_id(customer) %>" class="customer">
	<td colspan="3">
		<%- form_for(customer) do |f| -%>
		  <%= f.error_messages %>

		  <p>
		    <%= f.label :name %><br />
		    <%= f.text_field :name %>
		  </p>
		  <p>
		    <%= f.label :description %><br />
		    <%= f.text_area :description, :rows => 4 %>
		  </p>
		  <p>
		    <%= f.submit 'Create' %> <%= link_to('Close', '#', :class => 'close') %>
		  </p>
		<%- end -%>
	</td>
</tr>