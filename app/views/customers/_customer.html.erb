<tr id="<%= dom_id(customer) %>" class="customer row">
	<td class="actions"><div class="buttons-container"><div class="buttons"><%= link_to(image_tag('navigation-000-frame.png', :width => 16, :height => 16), edit_customer_path(customer), :class => 'edit hide') %></div></div><%=h customer.name %> <span class="description"><%=h customer.description %></span>
		</td>
	<td class="number"><%= formatted_customer_amount(customer.income(current_user.active_fiscal_year, current_user.default_currency)) %></td>
	<td class="number"><%= formatted_customer_amount(customer.expense(current_user.active_fiscal_year, current_user.default_currency)) %></td>
</tr>