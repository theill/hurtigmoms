<div class='<%= dom_id(@customer) %>'>
	<h1>Editing customer</h1>

	<% form_for(@customer) do |f| %>
	  <%= f.error_messages %>

	  <p>
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :description %><br />
	    <%= f.text_area :description, :rows => 4 %>
	  </p>
	  <p>
	    <%= f.submit 'Update' %> <%= link_to('Annuller', customers_path, :class => 'close') %>
	  </p>
	<% end %>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$("#colorbox").bind("cbox_complete", function(e) {
			$(".<%= dom_id(@customer) %> form").ajaxForm({ dataType: "script" });
		});
	});
</script>