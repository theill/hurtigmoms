<%- @meta = { :title => t('.title'), :description => t('.description') } -%>
<h1><%= t('.title') %><span><%= t('.description') %></span></h1>

<div class="grid_12">
	<div class="quick-buttons">
		<%= link_to 'Tilføj postering', new_posting_path, { :class => 'button show', :id => 'add-new-posting' } %>
	</div>
	
	<table id="postings">
		<thead>
			<tr>
				<th></th>
				<th><%= t('posting.created_at') %></th>
				<th><%= t('posting.attachment_no') %></th>
				<th><%= t('posting.note') %></th>
				<th><%= t('posting.account_id') %></th>
				<th><span class="account-type">Bank</span> <%= t('posting.amount_in') %></th>
				<th><span class="account-type">Bank</span> <%= t('posting.amount_out') %></th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<td colspan="4" rowspan="4"></td>
				<td>Bevægelse</td>
				<td><%= number_to_currency(@total_selling, :unit => current_user.default_currency) %></td>
				<td><%= number_to_currency(@total_buying, :unit => current_user.default_currency) %></td>
			</tr>
			<tr>
				<td>Beholdning, start</td>
				<td><%= number_to_currency(0, :unit => current_user.default_currency) %></td>
				<td class="dimmed"></td>
			</tr>
			<tr>
				<td>Beholdning, slut</td>
				<td class="dimmed"></td>
				<td><%= number_to_currency(@total_selling + 0 - @total_buying, :unit => current_user.default_currency) %></td>
			</tr>
			<tr>
				<td>Balance</td>
				<td><%= number_to_currency(@total_selling + 0, :unit => current_user.default_currency) %></td>
				<td><%= number_to_currency(@total_buying + (@total_selling + 0 - @total_buying), :unit => current_user.default_currency) %></td>
			</tr>
		</tfoot>
		<tbody>
		<%= render @postings %>
		</tbody>
	</table>
	
</div>

