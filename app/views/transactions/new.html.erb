<h1>New transaction</h1>

<% form_for(@transaction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :fiscal_year_id %><br />
    <%= f.text_field :fiscal_year_id %>
  </p>
  <p>
    <%= f.label :transaction_type %><br />
    <%= f.text_field :transaction_type %>
  </p>
  <p>
    <%= f.label :account_id %><br />
    <%= f.text_field :account_id %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.label :attachment_no %><br />
    <%= f.text_field :attachment_no %>
  </p>
  <p>
    <%= f.label :attachment_id %><br />
    <%= f.text_field :attachment_id %>
  </p>
  <p>
    <%= f.label :external_data %><br />
    <%= f.text_area :external_data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', transactions_path %>