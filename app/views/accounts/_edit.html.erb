<tr id="<%= dom_id(account) %>" class="account row-editing">
	<td colspan="3">
		<div class="box">
		<% form_for(account, :html => {:autocomplete => 'off'}) do |f| -%>
			<%= f.error_messages %>

			<table>
				<tr>
					<td>
						<fieldset>
							<%= f.label :account_no, t('account.account_no') + ' <span class="req">*</span>' %>
							<%= f.text_field :account_no, :size => 10, :maxlength => 10 %>
						</fieldset>
					</td>
					<td>
						<fieldset>
							<%= f.label :name, t('account.name') + ' <span class="req">*</span>' %>
							<%= f.text_field :name, :size => 20, :maxlength => 128 %>
						</fieldset>
					</td>
					<td>
						<fieldset>
							<%= f.label :account_type, t('account.account_type') + ' <span class="req">*</span>' %>
							<%= f.select :account_type, account_types, {:prompt => t('account.pick_account_type')} %>
						</fieldset>
					</td>
					<td>
						<fieldset>
							<%= f.label :vat_type, t('account.vat_type') + ' <span class="req">*</span>' %>
							<%= f.select :vat_type, vat_types, {:prompt => t('account.pick_vat_type')} %>
						</fieldset>
					</td>
					<td>
						<fieldset>
							<%= f.label :aggregate_from_account_no, t('account.aggregate_from_account_no') %>
							<%= f.text_field :aggregate_from_account_no, :size => 20, :maxlength => 128 %>
						</fieldset>
					</td>
				</tr>
				<tr>
					<td></td>
					<td colspan="4">
						<fieldset>
							<%= f.label :description, t('account.description') %>
							<%= f.text_area :description, :rows => 2, :cols => 60 %>
						</fieldset>
					</td>
					<td></td>
				</tr>
			</table>
			
			<div class="inline-buttons">
				<%- if account.new_record? -%>
				  <%= f.submit t('buttons.save') %> <%= link_to(t('buttons.close'), accounts_path, :class => 'close') %>
				<%- else -%>
					<%= f.submit t('buttons.save') %> <%= link_to t('buttons.close'), account_path(account, :format => :js), :class => 'show' %>
					
					<%- if account_deletable(account) -%>
						<div class="inline-actions"><%= t('.delete_account', :delete_link => link_to(t('buttons.delete'), account, :class => 'delete')) %></div>
					<%- end -%>
				<%- end -%>
			</div>
		<% end -%>
		</div>
	</td>
</tr>