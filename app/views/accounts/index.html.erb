	</div>
	
	<table id="accounts" class="editable-table">
		<thead>
			<tr>
				<th><%= t('account.account_no') %></th>
				<th><%= t('account.name') %></th>
				<th><%= t('account.account_type') %></th>
				<th><%= t('account.vat_type') %></th>
				<th><%= t('account.revenue') %></th>
			</tr>
		</thead>
		<tbody>
      <%= render @accounts %>
		</tbody>
	</table>
</div>

