<h1><%= t('.title') %></h1>

<% form_for @user do |form| %>
	<%= form.error_messages %>

	<fieldset>
		<%= form.label :company, t('user.company') %>
		<%= form.text_field :company %>
	</fieldset>

	<fieldset>
		<%= form.label :cvr, t('user.cvr') %>
		<%= form.text_field :cvr %>
	</fieldset>

  <%= form.submit t('buttons.save'), :disable_with => t('buttons.wait') %>
<% end %>
